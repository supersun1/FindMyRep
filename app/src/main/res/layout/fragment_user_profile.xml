<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <TextView
        android:id="@+id/id_text_user_profile"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:text="@string/user_profile__default_welcome"
        android:textAlignment="center"
        android:paddingTop="200dp"
        android:paddingBottom="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"

        tools:ignore="MissingConstraints">

    </TextView>


    <Button
        android:id="@+id/id_user_profile__sign_out"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:text="@string/user_profile__signout_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_text_user_profile"
        app:layout_constraintVertical_chainStyle="packed" />



</androidx.constraintlayout.widget.ConstraintLayout>